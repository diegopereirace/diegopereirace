{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}
{{ attach_library('block_breakpoint/block_breakpoint') }}

<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{% if label %}
		<h2{{title_attributes}}>{{ label }}</h2>
	{% endif %}
	{{ title_suffix }}
	{% block content %}
		<div{{content_attributes.addClass('content')}}>
			<div id="menu-desktop" class="position-relative z-3 block-breakpoint block-breakpoint-desktop" data-block-breakpoint-media-query="all and (min-width: 769px)">
        <div class="position-absolute w-100" style="padding-top:65px">
          <div class="container container-top">
            <div class="row">
              <div class="col-md-4 pr-0">
                <div class="wrap-logo">
                  <a href="{{ path('<front>') }}" title="Início">
                    <img src="{{ logo_path }}" class="img-fluid" width="220px" height="65px" draggable="false" alt="Logo"/>
                  </a>
                </div>
              </div>
              <div class="col-md-8 d-flex align-items-center justify-content-end">
                <div class="wrap-main-menu">
                  {% if path('<current>') == "/node" %}
                    {# drupal_menu('main') #}
                  {% else %}
                    {# drupal_menu('internal-menu') #}
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
				</div>
			</div>

      <div id="menu-mobile" class="container container-top pt-4 position-absolute z-3 block-breakpoint block-breakpoint-mobile" data-block-breakpoint-media-query="all and (min-width: 1px) and (max-width: 768px)">
        <div class="row">
          <div class="col-7 pr-0">
            <div class="wrap-logo teste">
              <a href="{{ path('<front>') }}" title="Início">
                <img src="{{ logo_path }}" class="image" draggable="false" style="width: 170px; height: 50px; object-fit: contain;" alt="Logo" />
              </a>
            </div>
          </div>
          <div class="col-5 d-flex align-items-center justify-content-between d-md-none">
            <div id="dv-icon-menu-mobile" class="text-end">
              <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Menu mobile">
                <svg width="24" height="24" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M3 4.5H21V6.5H3V4.5ZM3 11.5H21V13.5H3V11.5ZM3 18.5H21V20.5H3V18.5Z" fill="white"/>
                </svg>
              </button>
            </div>
            <div class="btn-login-mobile">{# drupal_menu('login-mobile') #}</div>
          </div>
        </div>
      </div>
    </div>

		<div id="offcanvasNavbar" class="offcanvas offcanvas-start block-breakpoint block-breakpoint-mobile" tabindex="-1" aria-labelledby="offcanvasNavbarLabel" style="background-color:#6BCBA7" data-block-breakpoint-media-query="all and (min-width: 1px) and (max-width: 768px)">
			<div class="offcanvas-header">
				<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
			</div>
			<div class="offcanvas-body">
				<div class="main-menu-mobile mb-4">
					{% if path('<current>') == "/node" %}
						{# drupal_menu('main') #}
					{% else %}
						{# drupal_menu('internal-menu') #}
					{% endif %}
				</div>
			</div>
		</div>
	{% endblock %}
</div>
